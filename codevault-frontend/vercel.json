{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite",
    "devCommand": "vite",
    "env": {
        "VITE_API_URL": {
            "description": "Backend API URL"
        }
    },
    "routes": [
        {
            "src": "^/assets/.*",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "continue": true
        },
        {
            "src": "^/.*",
            "dest": "/index.html"
        }
    ]
}